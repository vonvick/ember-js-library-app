<div class="jumbotron text-center">
  <h1>Contact Form</h1>

  <br/><br/>

  <p>Enter your e-mail address below and drop us a few lines, we would get back to you shortly!</p>

  <div class="row">
    <div class="col-lg-8 col-md-8 col-sm-12 col-xs-12">
      {{#if responseMessage }}
        <div class="alert alert-success">
          <h4>Thank you! Your message was sent.</h4>
          <p>Email: {{ model.contactEmail }}</p>
          <p>Message:{{ model.contactMessage }}</p>
          <p>Reference ID: {{ model.id }}</p>
        </div>
      {{else}}

        <form class="form-horizontal">
          <div class="form-group has-feedback {{ if model.isValidEmail 'has-success'}}">
            <label for="contactEmail" class="col-sm-2 control-label">Email*:</label>
            <div class="col-sm-10">
              {{input
                type="email"
                value=model.contactEmail
                class="form-control"
                id="contactEmail"
                placeholder="Please enter a valid e-mail address."
                autofocus="autofocus"
              }}
              {{#if model.isValidEmail }}<span class="glyphicon glyphicon-ok form-control-feedback"></span> {{/if}}
            </div>
          </div>
          <div class="form-group has-feedback {{if model.isValidMessage 'has-success'}}">
            <label for="contactMessage" class="col-sm-2 control-label">Message*:</label>
            <div class="col-sm-10">
              {{textarea
                class="form-control"
                id="contactMessage"
                placeholder="Your message. (At least 5 characters.)"
                rows="7"
                value=model.contactMessage
              }}
              {{#if model.isValidMessage }}<span class="glyphicon glyphicon-ok form-control-feedback"></span> {{/if}}
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10 col-sm-offset-2">
              <button
                disabled={{ model.isDisabled }}
                  class="btn btn-primary btn-lg btn-block"
              {{action "saveContact" model}}
              >Send Message
              </button>
            </div>
          </div>
        </form>
      {{/if}}

    </div>
  </div>

  {{#if model.responseMessage}}

  {{/if}}

  <br/><br/>
  <br/><br/>
</div>